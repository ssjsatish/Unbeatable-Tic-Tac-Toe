<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.seafle.satish.unbeatabletictactoe.SinglePlayer">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text=""
    android:textColor="@color/white"
    android:id="@+id/message_move"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/b1"
    android:layout_toEndOf="@+id/b1" />

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text=""
    android:textSize="32dp"
    android:textColor="@color/black"
    android:background="@color/white"
    android:id="@+id/b1"
    android:layout_marginTop="45dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="84dp"          />

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text=""
    android:textSize="32dp"
    android:textColor="@color/black"
    android:background="@color/white"
    android:id="@+id/b2"
    android:layout_alignBottom="@+id/b1"
    android:layout_toRightOf="@+id/b1"
    android:layout_toEndOf="@+id/b1"
    android:layout_marginLeft="2dp"


    />

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text=""
    android:textSize="32dp"
    android:textColor="@color/black"
    android:background="@color/white"
    android:id="@+id/b3"
    android:layout_alignTop="@+id/b2"
    android:layout_toRightOf="@+id/b2"
    android:layout_toEndOf="@+id/b2"
    android:layout_marginLeft="2dp"/>

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text=""
    android:textSize="32dp"
    android:textColor="@color/black"
    android:background="@color/white"
    android:id="@+id/b4"
    android:layout_below="@+id/b1"
    android:layout_toLeftOf="@+id/b2"
    android:layout_toStartOf="@+id/b2"
    android:layout_marginTop="2dp"/>

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text=""
    android:textSize="32dp"
    android:textColor="@color/black"
    android:background="@color/white"
    android:id="@+id/b5"
    android:layout_below="@+id/b1"
    android:layout_toRightOf="@+id/b1"
    android:layout_toEndOf="@+id/b1"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"/>

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text=""
    android:textSize="32dp"
    android:textColor="@color/black"
    android:background="@color/white"
    android:id="@+id/b6"
    android:layout_alignBottom="@+id/b5"
    android:layout_toRightOf="@+id/b5"
    android:layout_toEndOf="@+id/b5"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"/>

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text=""
    android:textSize="32dp"
    android:textColor="@color/black"
    android:background="@color/white"
    android:id="@+id/b7"
    android:layout_below="@+id/b4"
    android:layout_alignLeft="@+id/b4"
    android:layout_alignStart="@+id/b4"
    android:layout_marginTop="2dp"/>

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text=""
    android:textSize="32dp"
    android:textColor="@color/black"
    android:background="@color/white"
    android:id="@+id/b8"
    android:layout_below="@+id/b5"
    android:layout_toLeftOf="@+id/b6"
    android:layout_toStartOf="@+id/b6"
    android:layout_marginTop="2dp"/>

<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text=""
    android:textSize="32dp"
    android:textColor="@color/black"
    android:background="@color/white"
    android:id="@+id/b9"
    android:layout_below="@+id/b5"
    android:layout_alignRight="@+id/b6"
    android:layout_alignEnd="@+id/b6"
    android:layout_marginTop="2dp"
    />

<Button
    android:layout_width="160dp"
    android:layout_height="35dp"
    android:text="@string/new_game"
    android:id="@+id/new_game"
    android:background="@color/green"
    android:textColor="@color/white"
    android:layout_below="@+id/b7"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"/>

<Button
    android:layout_width="160dp"
    android:layout_height="35dp"
    android:text="@string/reset_scores"
    android:textColor="@color/white"
    android:background="@color/green"
    android:id="@+id/reset_scores"
    android:layout_below="@+id/new_game"
    android:layout_centerHorizontal="true" />




<TextView
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Human (X) : "
    android:textAlignment="textEnd"
    android:gravity="end"
    android:textColor="@color/white"
    android:id="@+id/player_one_score"
    android:layout_below="@+id/reset_scores"
    android:layout_alignRight="@+id/b8"
    android:layout_alignEnd="@+id/b8"
    android:layout_marginTop="10dp"/>

<TextView
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Android (O) : "
    android:textAlignment="textEnd"
    android:gravity="end"
    android:textColor="@color/white"
    android:id="@+id/player_two_score"
    android:layout_below="@+id/player_one_score"
    android:layout_alignLeft="@+id/player_one_score"
    android:layout_alignStart="@+id/player_one_score"
    android:layout_marginTop="5dp"/>

<TextView
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Draws :   "
    android:textAlignment="textEnd"
    android:gravity="end"
    android:textColor="@color/white"
    android:id="@+id/draws"
    android:layout_below="@+id/player_two_score"
    android:layout_alignLeft="@+id/b7"
    android:layout_alignStart="@+id/b7" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="0"
    android:textColor="@color/white"
    android:id="@+id/textView5"
    android:layout_alignTop="@+id/player_one_score"
    android:layout_toRightOf="@+id/player_one_score"
    android:layout_toEndOf="@+id/player_one_score"
    android:paddingLeft="10dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="0"
    android:textColor="@color/white"
    android:id="@+id/textView6"
    android:layout_alignTop="@+id/player_two_score"
    android:layout_toRightOf="@+id/player_two_score"
    android:layout_toEndOf="@+id/player_two_score"
    android:paddingLeft="10dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="0"
    android:textColor="@color/white"
    android:id="@+id/textView7"
    android:layout_alignTop="@+id/draws"
    android:layout_toRightOf="@+id/player_two_score"
    android:layout_toEndOf="@+id/player_two_score"
    android:paddingLeft="10dp"/>


</RelativeLayout>
